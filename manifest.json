{
  "name": "Affinity CU -> Firefly III",
  "version": "1.0",
  "description": "Scrapes account and transaction data from Affinity Credit Union (Canada) into Firefly III",
  "permissions": [
    "storage",
    "tabs"
  ],
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "./dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://personal.affinitycu.ca/*"],
      "js": ["./dist/auto.js"]
    },
    {
      "matches": ["https://personal.affinitycu.ca/Accounts/Summary*"],
      "js": ["./dist/accounts.js"]
    },
    {
      "matches": ["https://personal.affinitycu.ca/Transactions/History"],
      "js": ["./dist/transactions.js", "./dist/opening.js"]
    }
  ],
  "action": {
    "default_popup": "options.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "manifest_version": 3
}